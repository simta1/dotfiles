configuration {
    font:                 "Iosevka Nerd Font 14, Roboto Mono 14";
    show-icons:           false;
    matching:             "fuzzy";
    case-sensitive:       false;
    sort:                 true;
}

* {
    bg:        #1b1b25;
    bg-alt:    #16161e;
    fg:        #e6e6e6;
    fg-dim:    #c8c8d0;
    border:    #343746;
    sel:       #282a36;
    accent:    #bd93f9;
    urgent:    #ff5555;

    radius:    12px;
    spacing:   10px;
    text-color: @fg;
    background-color: @bg;
}

window {
    background-color:     rgba(27,27,37,0.96);
    border:               1px;
    border-color:         @border;
    border-radius:        @radius;
    padding:              16px;
    width:                42%;
}

mainbox {
    background-color:     @bg;
    border-radius:        @radius;
    spacing:              12px;
    children:             [ inputbar, listview ];
}

inputbar {
    background-color:     @bg-alt;
    border:               1px;
    border-color:         @border;
    border-radius:        @radius;
    padding:              10px 14px;
    spacing:              10px;
    children:             [ prompt, entry ];
}

prompt {
    text-color:           @accent;
    font:                 "Iosevka Nerd Font 13";
    background-color:     transparent;
    text:                 "ïƒª Clipboard";
}

entry {
    text-color:           @fg;
    background-color:     transparent;
    border:               0;
    vertical-align:       0.5;
}

listview {
    background-color:     @bg;
    border:               1px;
    border-color:         @border;
    border-radius:        @radius;
    columns:              1;
    lines:                10;
    fixed-height:         true;
    cycle:                true;
    spacing:              12px;
    padding:              10px;
    scrollbar:            true;
}

scrollbar {
    handle-width:         8px;
    border-radius:        8px;
    background-color:     @bg-alt;
    handle-color:         @accent;
}

element {
    background-color:     @bg;
    text-color:           @fg;
    border-radius:        12px;
    padding:              12px 16px;
    spacing:              16px;
    min-height:           52px;
}

element normal.normal {
    background-color:     @bg;
    text-color:           @fg;
}

element selected.normal {
    background-color:     @sel;
    text-color:           @fg;
    border:               1px;
    border-color:         @accent;
}

element normal.urgent {
    background-color:     #2a1b1b;
    text-color:           @urgent;
}

element selected.urgent {
    background-color:     #3a2222;
    text-color:           @fg;
    border:               1px;
    border-color:         @urgent;
}

element-text {
    text-color:           inherit;
    font:                 "Iosevka Nerd Font 14, Roboto Mono 14";
    background-color:     transparent;
    highlight:            bold;
    padding:              0;
    vertical-align:       0.5;
}
